var hoverSound = preload(\"res://assets/audio/hover.ogg\")
func _ready():
	hoverSound.loop = false
	mouse_entered.connect(func():
		var sound = hoverSound.instantiate_playback()
		var player = AudioStreamPlayer.new()
		player.stream = hoverSound
		add_child(player)
		player.play()
		player.volume_db = -20.0
		player.finished.connect(func():player.queue_free())
		)

func _on_gui_input(event):
	if event is InputEventMouseMotion:
		print('hover')
